<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myschool.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:name="com.myschool.game.main.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.myschool.game.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.myschool.game.main.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity android:name="com.myschool.game.shopping.ShoppingActivity" >
        </activity>
        <activity
            android:name="com.myschool.game.shopping.ProductListActivity"
            android:label="@string/title_product_list" >
        </activity>
        <activity
            android:name="com.myschool.game.shopping.ProductDetailActivity"
            android:label="@string/title_product_detail"
            android:parentActivityName = "com.myschool.game.shopping.ProductListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProductListActivity" />
        </activity>
    </application>

</manifest>
