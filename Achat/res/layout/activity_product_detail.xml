<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProductDetailActivity" >

    <TextView
        android:id="@+id/act_product_detail_text_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/act_product_detail_text_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/act_product_detail_text_product_name"
        android:layout_marginTop="24dp"
        android:text="0" />

    <TextView
        android:id="@+id/act_product_detail_text_product_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_product_detail_text_product_price"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="26dp"
        android:text="0" />

</RelativeLayout>